/**
 * Default blocks
 */
$icon-default
  &:before
    // font-family: "printi-ui-icons" !important
    font-size: 1rem !important
    font-style: normal !important
    font-variant: normal !important
    text-transform: none !important
    speak: none
    line-height: 1

  &--xs
    &^[0]:before
      font-size: $iconSize.xs !important

  &--sm
    &^[0]:before
      font-size: $iconSize.sm !important

  &--md
    &^[0]:before
      font-size: $iconSize.md !important

  &--lg
    &^[0]:before
      font-size: $iconSize.lg !important

  &--xl
    &^[0]:before
      font-size: $iconSize.xl !important

  &--xxl
    &^[0]:before
      font-size: $iconSize.xxl !important

  &--big
    &^[0]:before
      font-size: $iconSize.big !important

/**
 * Helper class
 */
.icn
  @extend $icon-default

