/**
 * Constants
 */
$iconSize = {
  xxs: 0.75rem,     // 16px
  xs: 1rem,     // 16px
  sm: 1.5rem,   // 24px
  md: 2rem,     // 32px
  lg: 2.5rem,   // 40px
  xl: 3rem,     //48px
  xxl: 3.5rem,  //56px
  big: 4rem     //64px
}

